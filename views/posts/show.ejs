<div class="card text-white bg-success mb-3" style="max-width: 20rem;">
    <div class="card-header">Created Post</div>
    <div class="card-body">
        <h4 class="card-title"><%= post.title %></h4>
        <p class="card-text"><%= post.description %></p>
        <p class="card-text"><%= post.location %></p>
    </div>
    <div class="card-footer">
        <p><%= post.price %></p>
        <div class="d-flex justify-content-spacebetween">
            <a class="btn btn-primary" type="button" href="/posts/<%= post._id %>/edit">Edit Post</a>
            <form action="<%= `/posts/${post._id}?_method=DELETE` %>" method="POST" class="ml-auto">
                <button class="btn btn-primary" type="submit" onclick="return confirm(`Are you sure you want to delete this item?`)">Delete</button>
            </form>
        </div>
    </div>
</div>